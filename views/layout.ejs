<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'E-commerce Site' %></title>

    <!-- Bootstrap CSS (if needed) -->
    <% if (typeof page !== 'undefined' && (page === 'checkout' || page === 'orders' || page === 'cart')) { %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <% } %>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/main.css">
    <% if (typeof page !== 'undefined' && page === 'checkout') { %>
    <link rel="stylesheet" href="/css/checkout.css">
    <% } %>
    <% if (typeof page !== 'undefined' && page === 'orders') { %>
    <link rel="stylesheet" href="/css/orders.css">
    <% } %>
    <% if (typeof page !== 'undefined' && page === 'success') { %>
    <link rel="stylesheet" href="/css/success.css">
    <% } %>
</head>

<body>
    <%- include('partials/header') %>

    <main>
        <%- content %>
    </main>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS (if needed) -->
    <% if (typeof page !== 'undefined' && (page === 'checkout' || page === 'orders')) { %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <% } %>

    <!-- jQuery (if needed) -->
    <% if (typeof page !== 'undefined' && (page === 'checkout' || page === 'orders')) { %>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <% } %>

    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    <% if (typeof page !== 'undefined' && page === 'checkout') { %>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="/js/checkout.js"></script>
    <% } %>
    <% if (typeof page !== 'undefined' && page === 'orders') { %>
    <script src="/js/orders.js"></script>
    <% } %>
</body>

</html>