<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - Admin Panel' : 'Admin Panel' %></title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Admin CSS -->
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-store me-2"></i>Admin Panel</h3>
            </div>
            <nav class="sidebar-nav">
                <a href="/admin" class="nav-item <%= typeof page !== 'undefined' && page === 'dashboard' ? 'active' : '' %>">
                    <i class="fas fa-chart-line me-2"></i>Dashboard
                </a>
                <a href="/admin/products" class="nav-item <%= typeof page !== 'undefined' && page === 'products' ? 'active' : '' %>">
                    <i class="fas fa-box me-2"></i>Products
                </a>
                <a href="/admin/products/new" class="nav-item <%= typeof page !== 'undefined' && page === 'add-product' ? 'active' : '' %>">
                    <i class="fas fa-plus-circle me-2"></i>Add Product
                </a>
                <a href="/" class="nav-item">
                    <i class="fas fa-home me-2"></i>Back to Site
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="admin-main">
            <!-- Top Navigation Bar -->
            <header class="admin-header">
                <div class="header-content">
                    <h4 class="mb-0"><%= typeof title !== 'undefined' ? title : 'Admin Dashboard' %></h4>
                    <div class="header-actions">
                        <a href="/" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-external-link-alt me-1"></i>View Site
                        </a>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="admin-content">
                <%- content %>
            </div>
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Admin JS -->
    <script src="/js/admin.js"></script>
</body>

</html>