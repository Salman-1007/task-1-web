<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !== 'undefined' ? title + ' - Admin Panel' : 'Admin Panel' %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <div class="admin-wrapper">
        <%- include('partials/sidebar') %>
            <main class="admin-main">
                <%- include('partials/header') %>
                    <div class="admin-content p-4">
                        <div class="product-form-container">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div>
                                    <h2 class="mb-1">
                                        <%= product && product._id ? 'Edit Product' : 'Add New Product' %>
                                    </h2>
                                    <p class="text-muted mb-0">
                                        <%= product && product._id ? 'Update product information' : 'Create a new product for your store' %>
                                    </p>
                                </div>
                                <a href="/admin/products" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Products
                                </a>
                            </div>

                            <% if (typeof error !== 'undefined' && error) { %>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    <%= error %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                                <% } %>

                                    <div class="card shadow-sm">
                                        <div class="card-body">
                                            <form method="POST" action="<%= product && product._id ? '/admin/products/' + product._id + '/edit' : '/admin/products/new' %>" id="productForm">
                                                <div class="row g-3">
                                                    <div class="col-md-12">
                                                        <label for="name" class="form-label fw-bold">Product Name <span class="text-danger">*</span></label>
                                                        <input type="text" class="form-control" id="name" name="name" value="<%= product ? product.name : '' %>" required maxlength="200">
                                                        <div class="form-text">Maximum 200 characters</div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <label for="description" class="form-label fw-bold">Description <span class="text-danger">*</span></label>
                                                        <textarea class="form-control" id="description" name="description" rows="4" required><%= product ? product.description : '' %></textarea>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <label for="price" class="form-label fw-bold">Price <span class="text-danger">*</span></label>
                                                        <div class="input-group">
                                                            <span class="input-group-text">$</span>
                                                            <input type="number" class="form-control" id="price" name="price" value="<%= product ? product.price : '' %>" step="0.01" min="0" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label for="stock" class="form-label fw-bold">Stock <span class="text-danger">*</span></label>
                                                        <input type="number" class="form-control" id="stock" name="stock" value="<%= product ? product.stock : '0' %>" min="0" required>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <label for="category" class="form-label fw-bold">Category <span class="text-danger">*</span></label>
                                                        <select class="form-select" id="category" name="category" required>
                                            <option value="">Select a category</option>
                                            <% if (typeof categories !== 'undefined') { %>
                                                <% categories.forEach(cat => { %>
                                                    <option value="<%= cat %>" <%= product && product.category === cat ? 'selected' : '' %>><%= cat %></option>
                                                <% }); %>
                                            <% } %>
                                        </select>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <label for="image" class="form-label fw-bold">Image URL</label>
                                                        <input type="text" class="form-control" id="image" name="image" value="<%= product ? product.image : '' %>" placeholder="/images/product.jpg">
                                                        <div class="form-text">Paste a URL or a local path like /images/products/item.jpg</div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <label for="rating" class="form-label fw-bold">Rating</label>
                                                        <input type="number" class="form-control" id="rating" name="rating" value="<%= product ? product.rating : '0' %>" step="0.1" min="0" max="5">
                                                        <div class="form-text">Rating from 0 to 5</div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label for="reviews" class="form-label fw-bold">Number of Reviews</label>
                                                        <input type="number" class="form-control" id="reviews" name="reviews" value="<%= product ? product.reviews : '0' %>" min="0">
                                                    </div>

                                                    <div class="col-md-12">
                                                        <div class="form-check form-switch p-2">
                                                            <input class="form-check-input" type="checkbox" id="featured" name="featured" value="true" <%=( product && product.featured) ? 'checked' : '' %>>
                                                            <label class="form-check-label fw-bold" for="featured">Featured Product</label>
                                                        </div>
                                                        <div class="form-text">Featured products will be highlighted on the home page.</div>
                                                    </div>

                                                    <% if (product && product.image) { %>
                                                        <div class="col-md-12 mt-3">
                                                            <label class="form-label fw-bold">Current Image Preview</label>
                                                            <div class="image-preview border p-2 text-center" style="background: #f8f9fa;">
                                                                <img src="<%= product.image %>" alt="Preview" class="img-thumbnail" style="max-height: 200px;" onerror="this.src='/images/placeholder.jpg'">
                                                            </div>
                                                        </div>
                                                        <% } %>

                                                            <div class="col-12">
                                                                <hr>
                                                                <div class="d-flex justify-content-end gap-2">
                                                                    <a href="/admin/products" class="btn btn-outline-secondary">Cancel</a>
                                                                    <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-save me-2"></i><%= product && product._id ? 'Update Product' : 'Create Product' %>
                                            </button>
                                                                </div>
                                                            </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                        </div>
                    </div>
            </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/js/admin.js"></script>
</body>

</html>