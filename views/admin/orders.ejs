<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - Admin Panel' : 'Admin Panel' %></title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Admin CSS -->
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <div class="admin-wrapper">
        <%- include('partials/sidebar') %>

        <main class="admin-main">
            <%- include('partials/header') %>

            <div class="admin-content">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="mb-1">Orders</h2>
                            <p class="text-muted mb-0">Manage customer orders and their lifecycle</p>
                        </div>
                    </div>

                    <% if (orders && orders.length) { %>
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped align-middle">
                                    <thead>
                                        <tr>
                                            <th>Order #</th>
                                            <th>Customer</th>
                                            <th>Email</th>
                                            <th>Date</th>
                                            <th>Total</th>
                                            <th>Status</th>
                                            <th>Next Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(order => { %>
                                        <tr>
                                            <td><span class="badge bg-dark">#<%= order.orderNumber %></span></td>
                                            <td><%= order.customerName %></td>
                                            <td><%= order.email %></td>
                                            <td><%= order.createdAt.toLocaleString() %></td>
                                            <td>Rs. <%= Number(order.total).toFixed(2) %></td>
                                            <td>
                                                <span class="badge bg-primary"><%= order.status %></span>
                                            </td>
                                            <td>
                                                <% const statusIndex = STATUS_FLOW.indexOf(order.status); %>
                                                <% if (statusIndex > -1 && statusIndex < STATUS_FLOW.length - 1) { %>
                                                <form method="post" action="/admin/orders/<%= order._id %>/next-status">
                                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                                        Move to <%= STATUS_FLOW[statusIndex + 1] %>
                                                    </button>
                                                </form>
                                                <% } else { %>
                                                <span class="text-muted small">No further action</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-box-open fa-4x mb-3 text-muted"></i>
                        <h4>No orders found</h4>
                        <p class="text-muted mb-0">Orders will appear here once customers place them.</p>
                    </div>
                    <% } %>
                </div>
            </div>
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Admin JS -->
    <script src="/js/admin.js"></script>
</body>

</html>