<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !== 'undefined' ? title + ' - Admin Panel' : 'Admin Panel' %>
    </title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Admin CSS -->
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <div class="admin-wrapper">
        <%- include('partials/sidebar') %>

            <main class="admin-main">
                <%- include('partials/header') %>

                    <div class="admin-content">
                        <div class="dashboard-container">
                            <!-- Stats Cards -->
                            <div class="row g-4 mb-4">
                                <div class="col-md-3">
                                    <div class="stat-card">
                                        <div class="stat-icon bg-primary">
                                            <i class="fas fa-box"></i>
                                        </div>
                                        <div class="stat-content">
                                            <h3>
                                                <%= stats.totalProducts %>
                                            </h3>
                                            <p>Total Products</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-card">
                                        <div class="stat-icon bg-success">
                                            <i class="fas fa-warehouse"></i>
                                        </div>
                                        <div class="stat-content">
                                            <h3>
                                                <%= stats.totalStock %>
                                            </h3>
                                            <p>Total Stock</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-card">
                                        <div class="stat-icon bg-warning">
                                            <i class="fas fa-exclamation-triangle"></i>
                                        </div>
                                        <div class="stat-content">
                                            <h3>
                                                <%= stats.lowStockProducts %>
                                            </h3>
                                            <p>Low Stock Items</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-card">
                                        <div class="stat-icon bg-info">
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <div class="stat-content">
                                            <h3>
                                                <%= stats.featuredProducts %>
                                            </h3>
                                            <p>Featured Products</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-4">
                                <!-- Products by Category -->
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Products by Category</h5>
                                        </div>
                                        <div class="card-body">
                                            <% if (productsByCategory.length > 0) { %>
                                                <div class="category-list">
                                                    <% productsByCategory.forEach(item => { %>
                                                        <div class="category-item">
                                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                                <span class="category-name"><%= item._id %></span>
                                                                <span class="badge bg-primary"><%= item.count %></span>
                                                            </div>
                                                            <div class="progress" style="height: 8px;">
                                                                <div class="progress-bar" role="progressbar" style="width: <%= stats.totalProducts > 0 ? (item.count / stats.totalProducts * 100) : 0 %>%" aria-valuenow="<%= item.count %>" aria-valuemin="0" aria-valuemax="<%= stats.totalProducts %>">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% }); %>
                                                </div>
                                                <% } else { %>
                                                    <p class="text-muted mb-0">No products found.</p>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>

                                <!-- Recent Products -->
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Recent Products</h5>
                                        </div>
                                        <div class="card-body">
                                            <% if (recentProducts.length > 0) { %>
                                                <div class="table-responsive">
                                                    <table class="table table-sm">
                                                        <thead>
                                                            <tr>
                                                                <th>Product</th>
                                                                <th>Price</th>
                                                                <th>Stock</th>
                                                                <th>Actions</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% recentProducts.forEach(product => { %>
                                                                <tr>
                                                                    <td>
                                                                        <strong><%= product.name %></strong>
                                                                    </td>
                                                                    <td>$
                                                                        <%= product.price.toFixed(2) %>
                                                                    </td>
                                                                    <td>
                                                                        <span class="badge <%= product.stock < 10 ? 'bg-warning' : 'bg-success' %>">
                                                            <%= product.stock %>
                                                        </span>
                                                                    </td>
                                                                    <td>
                                                                        <a href="/admin/products/<%= product._id %>/edit" class="btn btn-sm btn-outline-primary">
                                                                            <i class="fas fa-edit"></i>
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                                <% }); %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="text-center mt-3">
                                                    <a href="/admin/products" class="btn btn-primary">View All Products</a>
                                                </div>
                                                <% } else { %>
                                                    <p class="text-muted mb-0">No recent products.</p>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Admin JS -->
    <script src="/js/admin.js"></script>
</body>

</html>