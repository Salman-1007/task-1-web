<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - Admin Panel' : 'Admin Panel' %></title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Admin CSS -->
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <div class="admin-wrapper">
        <%- include('partials/sidebar') %>

        <main class="admin-main">
            <%- include('partials/header') %>

            <div class="admin-content">
                <div class="error-container text-center py-5">
                    <div class="error-icon mb-4">
                        <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
                    </div>
                    <h2><%= typeof title !== 'undefined' ? title : 'Error' %></h2>
                    <p class="text-muted mb-4"><%= typeof message !== 'undefined' ? message : 'An error occurred.' %></p>
                    <div>
                        <a href="/admin" class="btn btn-primary me-2">
                            <i class="fas fa-home me-2"></i>Go to Dashboard
                        </a>
                        <a href="/admin/products" class="btn btn-outline-secondary">
                            <i class="fas fa-box me-2"></i>View Products
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Admin JS -->
    <script src="/js/admin.js"></script>
</body>

</html>