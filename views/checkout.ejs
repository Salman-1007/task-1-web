<%- include('partials/header') %>
    <link rel="stylesheet" href="/css/checkout.css">

    <div class="checkout-wrapper">
        <div class="container py-5">
            <div class="checkout-progress mb-5">
                <div class="step completed"><span><i class="fas fa-check"></i></span>
                    <p>Cart</p>
                </div>
                <div class="step active"><span>2</span>
                    <p>Details</p>
                </div>
                <div class="step"><span>3</span>
                    <p>Payment</p>
                </div>
                <div class="step"><span>4</span>
                    <p>Finish</p>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-lg-8">
                    <form id="checkoutForm" action="/cart/checkout" method="POST">
                        <div class="checkout-card p-4">
                            <h4 class="mb-4"><i class="fas fa-shipping-fast me-2"></i>Shipping Information</h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Full Name</label>
                                    <input type="text" class="form-control" name="fullName" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" name="phone" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Email Address</label>
                                    <input type="email" class="form-control" name="email" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Street Address</label>
                                    <input type="text" class="form-control" name="address" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">City</label>
                                    <input type="text" class="form-control" name="city" required>
                                </div>
                            </div>
                        </div>

                        <div class="checkout-card p-4 mt-4">
                            <h4 class="mb-4"><i class="fas fa-credit-card me-2"></i>Payment Method</h4>

                            <div class="payment-option selected" onclick="selectPayment(this, 'cod')">
                                <input type="radio" name="payment" id="cod" value="cod" checked style="display:none;">
                                <div class="d-flex justify-content-between align-items-center w-100">
                                    <div>
                                        <h6 class="mb-0">Cash on Delivery</h6>
                                        <small class="text-muted">Pay when you receive the package</small>
                                    </div>
                                    <i class="fas fa-money-bill-wave text-success fs-4"></i>
                                </div>
                            </div>

                            <div class="payment-option" onclick="selectPayment(this, 'card')">
                                <input type="radio" name="payment" id="card" value="card" style="display:none;">
                                <div class="d-flex justify-content-between align-items-center w-100">
                                    <div>
                                        <h6 class="mb-0">Credit / Debit Card</h6>
                                        <small class="text-muted">Secure payment via Stripe/Mastercard</small>
                                    </div>
                                    <div class="fs-4">
                                        <i class="fab fa-cc-visa text-primary"></i>
                                        <i class="fab fa-cc-mastercard text-warning"></i>
                                    </div>
                                </div>
                            </div>

                            <div id="cardDetails" class="mt-3" style="display:none;">
                                <div class="row g-2">
                                    <div class="col-12"><input type="text" class="form-control" placeholder="Card Number"></div>
                                    <div class="col-md-6"><input type="text" class="form-control" placeholder="MM/YY"></div>
                                    <div class="col-md-6"><input type="text" class="form-control" placeholder="CVC"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col-lg-4">
                    <div class="checkout-card p-4 sticky-top" style="top: 20px;">
                        <h4 class="mb-4">Order Summary</h4>
                        <div class="summary-list">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Items (<%= cart.items.length %>)</span>
                                <span>Rs. <%= cart.subtotal %></span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Shipping</span>
                                <span class="<%= cart.shipping == 0 ? 'text-success fw-bold' : '' %>">
                                <%= cart.shipping == 0 ? 'FREE' : 'Rs. ' + cart.shipping %>
                            </span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Estimated Tax (5%)</span>
                                <span>Rs. <%= cart.tax %></span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <span class="fw-bold fs-5">Total</span>
                                <span class="fw-bold fs-5 text-primary">Rs. <%= cart.total %></span>
                            </div>
                        </div>

                        <button type="submit" form="checkoutForm" class="btn btn-primary btn-lg w-100">
                        Place Order
                    </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function selectPayment(el, id) {
            // Remove selection from all options
            document.querySelectorAll('.payment-option').forEach(opt => opt.classList.remove('selected'));
            // Add selection to clicked option
            el.classList.add('selected');
            // Check the hidden radio button
            document.getElementById(id).checked = true;
            // Show/Hide card details
            document.getElementById('cardDetails').style.display = (id === 'card') ? 'block' : 'none';
        }
    </script>