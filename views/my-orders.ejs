<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders by Email</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/header') %>

    <div class="container py-5">
        <h1 class="mb-4">Find Your Orders</h1>

        <form method="post" action="/my-orders" class="row g-3 mb-4">
            <div class="col-md-6">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter the email used for orders" value="<%= typeof searchEmail !== 'undefined' ? searchEmail : '' %>" required>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-dark">Search Orders</button>
            </div>
        </form>

        <% if (typeof orders !== 'undefined') { %>
        <% if (orders.length > 0) { %>
        <h2 class="h5 mb-3">Orders for <%= searchEmail %></h2>
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                    <tr>
                        <td><span class="badge bg-secondary"><%= order.orderNumber %></span></td>
                        <td><%= order.createdAt.toLocaleString() %></td>
                        <td>Rs. <%= Number(order.total).toFixed(2) %></td>
                        <td><span class="badge bg-primary"><%= order.status %></span></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <p class="text-muted">No orders found for this email.</p>
        <% } %>
        <% } %>
    </div>

    <%- include('partials/footer') %>
</body>

</html>


